<!-- 
	This file contains the default settings used to initialize
	the JMSArcRepositoryClient class.

	For documentation of the individual settings, please refer to the javadoc for
	dk.netarkivet.archive.arcrepository.distribute.JMSArcRepositoryClient.java 
-->
<settings>
    <common>
        <arcrepositoryClient>
            <!-- Set to 1 minute to make it possible to retrieve large records
                 using FTP -->
            <getTimeout>60000</getTimeout>
            <storeRetries>3</storeRetries>
            <storeTimeout>3600000</storeTimeout>
        </arcrepositoryClient>
    </common>
</settings>
