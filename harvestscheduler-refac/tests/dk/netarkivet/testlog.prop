#define Handlers
handlers=java.util.logging.FileHandler
#define default logging level
.level=INFO
#setup the File Handler
# Do not use \ -- this is parsed as a Java string!
java.util.logging.FileHandler.pattern=./tests/testlogs/netarkivtest.log
java.util.logging.FileHandler.limit=1500000
java.util.logging.FileHandler.count=1
java.util.logging.FileHandler.append=false
java.util.logging.FileHandler.formatter=java.util.logging.SimpleFormatter
#define logging levels
# default netarkivet logging level = ALL
dk.netarkivet.level=ALL
#do not log ordinary messages from non-netarkivet packages
org.level=WARNING
#Give properties to CachingLogHandler
dk.netarkivet.monitor.logging.CachingLogHandler.formatter=java.util.logging.SimpleFormatter
dk.netarkivet.monitor.logging.CachingLogHandler.level=FINE
## This class emits a lot log messages at level FINE
dk.netarkivet.common.management.SingleMBeanObject.level=INFO
## This class emits a lot log messages at level FINE
dk.netarkivet.monitor.registry.MonitorRegistry.level=INFO